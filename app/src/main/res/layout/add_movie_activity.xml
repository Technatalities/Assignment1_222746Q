<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMovieActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name" />

    <EditText
        android:id="@+id/add_movie_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the title of the Movie" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description" />

    <EditText
        android:id="@+id/add_movie_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a short description of the movie"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Language" />

    <RadioGroup
        android:id="@+id/add_movie_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/english_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English" />

        <RadioButton
            android:id="@+id/chinese_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chinese" />

        <RadioButton
            android:id="@+id/malay_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Malay" />

        <RadioButton
            android:id="@+id/tamil_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tamil" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Release Date"/>

    <EditText
        android:id="@+id/add_movie_release_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter release date"/>

    <CheckBox
        android:id="@+id/not_suitable_for_all_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not suitable for all audience"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/conditional_violence_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            android:text="Violence"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/conditional_language_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language Used"
            android:visibility="gone"/>
    </LinearLayout>

    <Button
        android:id="@+id/submit_new_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="Add Movie" />
</LinearLayout>